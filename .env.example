# ============================================
# CONFIGURAÇÕES DO SISTEMA RAG DE ESTUDOS
# ============================================
# Copie este arquivo para ".env" e configure suas chaves

# ============================================
# CONFIGURAÇÕES DE LOGIN
# ============================================
# Usuário e senha para acesso ao sistema
LOGIN_USERNAME=admin
LOGIN_PASSWORD=mudar123
# Tempo de sessão em segundos (3600 = 1 hora)
SESSION_TIMEOUT=3600

# ============================================
# CONFIGURAÇÕES DE API - ANTHROPIC (Claude)
# ============================================
ANTHROPIC_API_KEY=sk-ant-api03-XXXXX
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ============================================
# CONFIGURAÇÕES DE API - OPENAI
# ============================================
OPENAI_API_KEY=sk-XXXXX
OPENAI_MODEL=gpt-4o

# ============================================
# CONFIGURAÇÕES DE API - DEEPSEEK
# ============================================
DEEPSEEK_API_KEY=sk-XXXXX
DEEPSEEK_MODEL=deepseek-chat

# ============================================
# CONFIGURAÇÕES DE API - OLLAMA (Local)
# ============================================
# URL do servidor Ollama (padrão: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ============================================
# PROVEDOR PADRÃO
# ============================================
# Opções: anthropic, openai, deepseek, ollama
DEFAULT_AI_PROVIDER=anthropic

# ============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ============================================
DB_FILE=study_system.db

# ============================================
# CONFIGURAÇÕES DE UPLOAD
# ============================================
UPLOAD_DIR=uploads/
MAX_FILE_SIZE=50M

# ============================================
# CONFIGURAÇÕES DE DEBUG
# ============================================
# true para desenvolvimento, false para produção
DEBUG_MODE=true

# ============================================
# CERTIFICADO SSL (Windows/Laragon)
# ============================================
# Caminho para o certificado CA (deixe vazio para auto-detectar)
CACERT_PATH=